# -- Desktop Setup --
general {
    gaps_in = 15
    gaps_out = 85
    border_size = 2
    layout = dwindle
    resize_on_border = false

    col.active_border = rgba({{base07-hex}}ff) rgba({{base05-hex}}ff) 45deg
    col.inactive_border =  rgba({{base05-hex}}ff) 
}

decoration {
    rounding = 16
    drop_shadow = true
    shadow_range = 24
    shadow_render_power = 3
    col.shadow = 0xaa08080c
    shadow_offset = 0 30
    shadow_scale = 0.88

    blur {
        enabled = true
        size = 12
        passes = 2
        xray=true
        ignore_opacity = true
    }   
}

animations {
    enabled = true
    first_launch_animation = false

    #https://www.cssportal.com/css-cubic-bezier-generator/
    bezier = overshot, 0.05, 0.9, 0.1, 1.05
    bezier = smoothOut, 0.36, 0, 0.66, -0.56
    bezier = smoothIn, 0.25, 1, 0.5, 1
    bezier = smooth, 0, 0, 1, 1

    animation = windows, 1, 4, overshot, popin
    animation = windowsIn, 1, 4, overshot, popin
    animation = windowsOut, 1, 4, smoothOut, slide
    animation = windowsMove, 1, 3, default
    animation = border, 1, 2, smoothIn
    animation = borderangle, 1, 15, smooth, loop
    animation = fade, 1, 3, smoothOut
    animation = fadeIn, 1, 2, smoothOut
    animation = workspaces, 1, 4, overshot, slide
}
