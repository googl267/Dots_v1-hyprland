# -- Desktop Setup --
general {
    gaps_in = 4
    gaps_out = 8
    border_size = 2
    layout = dwindle
    resize_on_border = false

    col.active_border = rgba({{base07-hex}}ff)
    col.inactive_border =  rgba({{base00-hex}}00)
}

decoration {
    rounding = 5
    drop_shadow = false

    blur {
        enabled = false
    }   
}

animations {
    enabled = true
    first_launch_animation = false

    animation=fade,0
    animation=border,0
    animation=workspaces, 1, 2, default, slide
    animation=windows, 1, 2, default, popin
}
