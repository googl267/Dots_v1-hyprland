# Base16 {{scheme-name}}
# {{scheme-author}}


# -- Desktop Setup --
general {
    col.active_border = rgba({{base07-hex}}ff)
    col.inactive_border =  rgba({{base00-hex}}ff)
    gaps_in = 10
    gaps_out = 16
    border_size = 2
    layout = dwindle
    resize_on_border = false
}

decoration {
    rounding = 3
    multisample_edges = true
    drop_shadow = true
    shadow_range = 12
    shadow_render_power = 3
    col.shadow = 0x0b08080c

    blur {
        enabled = false
    }   
}